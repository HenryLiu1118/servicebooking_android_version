<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:id="@+id/linearLayout"
    tools:context=".ServiceProvide.ServiceFormActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tv_title"
        android:text="Update Service"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="35dp"></TextView>
    <Spinner
        android:id="@+id/sp_serviceType"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="30dp"></Spinner>

    <EditText
        android:id="@+id/ed_text"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"
        android:background="#FDE2C1"></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/ed_price"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:hint="Price"
            android:layout_height="match_parent"></EditText>

        <Button
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:onClick="onSubmit"
            android:text="Submit"></Button>
    </LinearLayout>

</LinearLayout>